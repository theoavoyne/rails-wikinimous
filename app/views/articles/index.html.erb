<div id="header">
  <span id="title">Wiki</span>
  <h1>Articles</h1>
  <%= link_to new_article_path, {class: 'btn btn-primary main-btn'} do %>
    <span><i class="far fa-edit"></i>    Write a new article</span>
  <% end %>
</div>
<div class="articles">
  <% @articles.each do |article| %>
    <%= link_to article_path(article) do %>
      <div class="article">
        <div class="article-text">
          <h2><%= article.title %></h2>
          <p><%= article.content %></p>
        </div>
        <%= link_to article_path(article), {class: 'btn btn-primary main-btn'} do %>
          <span>See more</span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
